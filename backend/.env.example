# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/huddlesync

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# AWS S3 (for audio storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=huddlesync-uploads

# Anthropic (Claude API for summarization)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenAI Whisper (for audio transcription)
WHISPER_API_KEY=sk-your-openai-api-key

# Diarization microservice
DIARIZATION_SERVICE_URL=http://localhost:8000

# CORS
CORS_ORIGIN=http://localhost:8081
